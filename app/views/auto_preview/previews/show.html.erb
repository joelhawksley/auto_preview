<!DOCTYPE html>
<html>
<head>
  <title>AutoPreview - <%= @template_path %></title>
  <style>
    * { box-sizing: border-box; margin: 0; padding: 0; }

    body {
      font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
      height: 100vh;
      overflow: hidden;
      background: #f1f5f9;
    }

    .auto-preview-layout {
      display: flex;
      height: 100vh;
    }

    .auto-preview-sidebar {
      width: 380px;
      min-width: 380px;
      background: #ffffff;
      border-right: 1px solid #e2e8f0;
      display: flex;
      flex-direction: column;
      height: 100vh;
      overflow: hidden;
    }

    .auto-preview-sidebar-header {
      padding: 16px 20px;
      border-bottom: 1px solid #e2e8f0;
      background: #f8fafc;
    }

    .auto-preview-sidebar-header h1 {
      font-size: 16px;
      font-weight: 600;
      color: #0f172a;
      margin-bottom: 4px;
    }

    .auto-preview-sidebar-header a {
      color: #3b82f6;
      text-decoration: none;
      font-size: 13px;
    }

    .auto-preview-sidebar-header a:hover {
      text-decoration: underline;
    }

    .auto-preview-template-info {
      padding: 12px 20px;
      background: #eef2ff;
      border-bottom: 1px solid #e2e8f0;
    }

    .auto-preview-template-info code {
      font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, monospace;
      font-size: 12px;
      color: #3730a3;
      background: rgba(255, 255, 255, 0.7);
      padding: 2px 6px;
      border-radius: 4px;
    }

    .auto-preview-sidebar-body {
      flex: 1;
      overflow-y: auto;
      padding: 16px 20px;
    }

    .auto-preview-section {
      margin-bottom: 20px;
    }

    .auto-preview-section-title {
      font-size: 11px;
      font-weight: 600;
      text-transform: uppercase;
      letter-spacing: 0.05em;
      color: #64748b;
      margin-bottom: 10px;
    }

    .auto-preview-var {
      padding: 12px;
      border-radius: 8px;
      background: #f8fafc;
      border: 1px solid #e2e8f0;
      margin-bottom: 10px;
    }

    .auto-preview-var-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 8px;
    }

    .auto-preview-var-name {
      font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, monospace;
      font-size: 13px;
      color: #0f172a;
      font-weight: 600;
    }

    .auto-preview-type-select,
    .auto-preview-value-input {
      width: 100%;
      padding: 8px 10px;
      border: 1px solid #d1d5db;
      border-radius: 6px;
      font-size: 13px;
      background: #fff;
      margin-top: 6px;
    }

    .auto-preview-type-select:focus,
    .auto-preview-value-input:focus {
      outline: none;
      border-color: #3b82f6;
      box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1);
    }

    .auto-preview-bool-group {
      display: flex;
      gap: 16px;
      margin-top: 8px;
      padding: 8px 0;
    }

    .auto-preview-bool-group label {
      display: flex;
      align-items: center;
      gap: 6px;
      cursor: pointer;
      font-size: 13px;
      color: #374151;
    }

    .auto-preview-submit {
      width: 100%;
      padding: 10px 16px;
      border: none;
      border-radius: 6px;
      background: #2563eb;
      color: #fff;
      font-size: 14px;
      font-weight: 500;
      cursor: pointer;
      transition: background 0.15s;
    }

    .auto-preview-submit:hover {
      background: #1d4ed8;
    }

    .auto-preview-empty {
      text-align: center;
      color: #64748b;
      padding: 24px 0;
      font-size: 14px;
    }

    .auto-preview-add-var {
      width: 100%;
      padding: 8px 12px;
      border: 1px dashed #cbd5e1;
      border-radius: 6px;
      background: transparent;
      color: #64748b;
      font-size: 13px;
      cursor: pointer;
      margin-top: 8px;
      transition: all 0.15s;
    }

    .auto-preview-add-var:hover {
      border-color: #3b82f6;
      color: #3b82f6;
      background: #eff6ff;
    }

    .auto-preview-main {
      flex: 1;
      display: flex;
      flex-direction: column;
      overflow: hidden;
    }

    .auto-preview-content {
      flex: 1;
      display: flex;
      overflow: hidden;
    }

    .auto-preview-panel {
      flex: 1;
      display: flex;
      flex-direction: column;
      overflow: hidden;
      min-width: 0;
    }

    .auto-preview-panel:first-child {
      border-right: 1px solid #e2e8f0;
    }

    .auto-preview-panel-header {
      padding: 8px 16px;
      background: #f8fafc;
      border-bottom: 1px solid #e2e8f0;
      font-size: 11px;
      font-weight: 600;
      text-transform: uppercase;
      letter-spacing: 0.05em;
      color: #64748b;
    }

    .auto-preview-panel-body {
      flex: 1;
      overflow: auto;
    }

    .auto-preview-iframe {
      width: 100%;
      height: 100%;
      border: none;
    }

    .auto-preview-source {
      height: 100%;
      overflow: auto;
      padding: 16px;
      background: #1e293b;
    }

    .auto-preview-source pre {
      margin: 0;
      font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, monospace;
      font-size: 13px;
      line-height: 1.6;
      color: #e2e8f0;
      white-space: pre-wrap;
      word-wrap: break-word;
    }

    .auto-preview-source code {
      font-family: inherit;
    }

    /* ERB Syntax Highlighting */
    .erb-tag { color: #fbbf24; }
    .erb-output { color: #34d399; }
    .erb-comment { color: #6b7280; font-style: italic; }
    .html-tag { color: #60a5fa; }
    .html-attr { color: #c4b5fd; }
    .html-string { color: #fca5a5; }
    .html-comment { color: #6b7280; font-style: italic; }
  </style>
</head>
<body>
  <div class="auto-preview-layout">
    <aside class="auto-preview-sidebar">
      <div class="auto-preview-sidebar-header">
        <h1>AutoPreview</h1>
      </div>

      <div class="auto-preview-sidebar-body">
        <%= form_tag url_for(action: :show), method: :get, id: "autoPreviewForm" do %>
          <div class="auto-preview-section">
            <div class="auto-preview-section-title">Template</div>
            <select class="auto-preview-type-select" name="template" onchange="this.form.submit()">
              <% @erb_files.each do |file| %>
                <option value="<%= file %>" <%= 'selected' if file == @template_path %>><%= file %></option>
              <% end %>
            </select>
          </div>

          <div class="auto-preview-section">
            <div class="auto-preview-section-title">Controller Context</div>
            <select class="auto-preview-type-select" name="controller_context" id="controller_context" onchange="this.form.submit()">
              <% @controllers.each do |controller| %>
                <option value="<%= controller %>" <%= 'selected' if controller == @controller_context %>><%= controller %></option>
              <% end %>
            </select>
          </div>

          <% vars = @existing_vars.respond_to?(:to_unsafe_h) ? @existing_vars.to_unsafe_h : (@existing_vars || {}) %>

          <div class="auto-preview-section">
            <div class="auto-preview-section-title">Variables</div>

            <% if vars.present? %>
              <% vars.each do |name, config| %>
                <% cfg = config.respond_to?(:to_unsafe_h) ? config.to_unsafe_h : config %>
                <% cfg = cfg || {} %>
                <% is_predicate = name.to_s.end_with?("?") %>
                <% current_type = cfg["type"] || cfg[:type] || (is_predicate ? "Boolean" : "String") %>
                <% current_value = cfg["value"] || cfg[:value] || "" %>
                <% param_key = name.to_s.parameterize %>

                <div class="auto-preview-var">
                  <div class="auto-preview-var-header">
                    <span class="auto-preview-var-name"><%= name %></span>
                  </div>

                  <select class="auto-preview-type-select"
                          name="vars[<%= name %>][type]"
                          onchange="AutoPreview.onTypeChange('<%= param_key %>', this.value)">
                    <% AutoPreview::PreviewsControllerMethods::RUBY_TYPES.each do |type| %>
                      <option value="<%= type %>" <%= 'selected' if type == current_type %>><%= type %></option>
                    <% end %>
                  </select>

                  <input class="auto-preview-value-input"
                         type="text"
                         name="vars[<%= name %>][value]"
                         id="auto_preview_value_<%= param_key %>"
                         value="<%= current_value %>"
                         style="<%= (current_type == 'Boolean' || current_type == 'Factory') ? 'display:none;' : '' %>">

                  <select class="auto-preview-type-select auto-preview-factory-select"
                          id="auto_preview_factory_<%= param_key %>"
                          onchange="AutoPreview.setFactory('<%= param_key %>', this.value)"
                          style="<%= current_type == 'Factory' ? '' : 'display:none;' %>">
                    <option value="">Select a factory...</option>
                    <% @factories.each do |factory| %>
                      <option value="<%= factory[:name] %>" <%= 'selected' if current_value == factory[:name] %>><%= factory[:name] %></option>
                      <% factory[:traits].each do |trait| %>
                        <option value="<%= factory[:name] %>:<%= trait %>" <%= 'selected' if current_value == "#{factory[:name]}:#{trait}" %>><%= factory[:name] %>:<%= trait %></option>
                      <% end %>
                    <% end %>
                  </select>

                  <div class="auto-preview-bool-group" id="auto_preview_bool_<%= param_key %>" style="<%= current_type == 'Boolean' ? '' : 'display:none;' %>">
                    <label>
                      <input type="radio" name="bool_<%= param_key %>" value="true"
                             onchange="AutoPreview.setBoolean('<%= param_key %>', 'true')"
                             <%= 'checked' if current_value.to_s == 'true' %>>
                      True
                    </label>
                    <label>
                      <input type="radio" name="bool_<%= param_key %>" value="false"
                             onchange="AutoPreview.setBoolean('<%= param_key %>', 'false')"
                             <%= 'checked' if current_value.to_s == 'false' %>>
                      False
                    </label>
                  </div>
                </div>
              <% end %>
            <% else %>
              <div class="auto-preview-empty">No variables detected.</div>
            <% end %>
          </div>

          <button class="auto-preview-submit" type="submit">Update Preview</button>
        <% end %>
      </div>
    </aside>

    <main class="auto-preview-main">
      <div class="auto-preview-content">
        <div class="auto-preview-panel">
          <div class="auto-preview-panel-header">Preview</div>
          <div class="auto-preview-panel-body">
            <iframe class="auto-preview-iframe" id="previewFrame" srcdoc="<%= @rendered_content.gsub('"', '&quot;') %>"></iframe>
          </div>
        </div>

        <div class="auto-preview-panel">
          <div class="auto-preview-panel-header">Source</div>
          <div class="auto-preview-panel-body">
            <div class="auto-preview-source">
              <pre><code id="sourceCode"></code></pre>
            </div>
          </div>
        </div>
      </div>
    </main>
  </div>

  <script>
    window.AutoPreview = {
      onTypeChange(paramKey, type) {
        const valueInput = document.getElementById('auto_preview_value_' + paramKey);
        const boolGroup = document.getElementById('auto_preview_bool_' + paramKey);
        const factorySelect = document.getElementById('auto_preview_factory_' + paramKey);

        if (type === 'Boolean') {
          valueInput.style.display = 'none';
          boolGroup.style.display = 'flex';
          if (factorySelect) factorySelect.style.display = 'none';
        } else if (type === 'Factory') {
          valueInput.style.display = 'none';
          boolGroup.style.display = 'none';
          if (factorySelect) {
            factorySelect.style.display = 'block';
            // Set value from factory select if one is selected
            if (factorySelect.value) {
              valueInput.value = factorySelect.value;
            }
          }
        } else {
          valueInput.style.display = 'block';
          boolGroup.style.display = 'none';
          if (factorySelect) factorySelect.style.display = 'none';
        }
      },

      setBoolean(paramKey, value) {
        const valueInput = document.getElementById('auto_preview_value_' + paramKey);
        valueInput.value = value;
      },

      setFactory(paramKey, value) {
        const valueInput = document.getElementById('auto_preview_value_' + paramKey);
        valueInput.value = value;
      },

      highlightERB(source) {
        // Build patterns using string concatenation to avoid ERB parsing
        const erbOpen = '&lt;' + '%';
        const erbClose = '%' + '&gt;';

        // Escape HTML first
        let html = source
          .replace(/&/g, '&amp;')
          .replace(/</g, '&lt;')
          .replace(/>/g, '&gt;');

        // Highlight ERB comments
        const commentPattern = new RegExp('(' + erbOpen + '#[\\s\\S]*?' + erbClose + ')', 'g');
        html = html.replace(commentPattern, '<span class="erb-comment">$1</span>');

        // Highlight ERB output tags
        const outputPattern = new RegExp('(' + erbOpen + '=[\\s\\S]*?' + erbClose + ')', 'g');
        html = html.replace(outputPattern, '<span class="erb-output">$1</span>');

        // Highlight ERB execution tags
        const execPattern = new RegExp('(' + erbOpen + '[\\s\\S]*?' + erbClose + ')', 'g');
        html = html.replace(execPattern, function(match) {
          // Don't re-highlight already highlighted tags
          if (match.includes('class="erb-')) return match;
          return '<span class="erb-tag">' + match + '</span>';
        });

        // Highlight HTML comments
        html = html.replace(/(&lt;!--[\s\S]*?--&gt;)/g, '<span class="html-comment">$1</span>');

        // Highlight HTML tags (but not ERB inside them)
        html = html.replace(/(&lt;\/?[a-zA-Z][a-zA-Z0-9]*)((?:\s+[^&]*?)?&gt;)/g, function(match, tag, rest) {
          // Highlight attributes in the rest part
          let highlighted = rest.replace(/([a-zA-Z_-]+)(=)("[^"]*"|'[^']*')/g,
            '<span class="html-attr">$1</span>$2<span class="html-string">$3</span>');
          return '<span class="html-tag">' + tag + '</span>' + highlighted;
        });

        return html;
      }
    };

    // Highlight the source code on load
    document.addEventListener('DOMContentLoaded', function() {
      const sourceCode = document.getElementById('sourceCode');
      const rawSource = <%= (@template_source || "").to_json.html_safe %>;
      sourceCode.innerHTML = AutoPreview.highlightERB(rawSource);
    });
  </script>
</body>
</html>
